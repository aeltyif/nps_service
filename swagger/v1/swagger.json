{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/api/v1/games": {
      "get": {
        "summary": "List all games",
        "tags": [
          "Games"
        ],
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "responses": {
          "200": {
            "description": "games found",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "finished": {
                  "type": "boolean"
                }
              },
              "required": [
                "id",
                "name"
              ]
            }
          },
          "422": {
            "description": "invalid request"
          }
        }
      },
      "post": {
        "summary": "Create a game",
        "tags": [
          "Games"
        ],
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "game",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "finished": {
                  "type": "boolean"
                }
              },
              "required": [
                "name",
                "finished"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "game created"
          },
          "422": {
            "description": "invalid request"
          }
        }
      }
    },
    "/api/v1/games/{id}": {
      "get": {
        "summary": "Retrieves a game",
        "tags": [
          "Games"
        ],
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "game found",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "finished": {
                  "type": "boolean"
                }
              },
              "required": [
                "id",
                "name"
              ]
            }
          },
          "404": {
            "description": "game not found"
          }
        }
      }
    }
  }
}